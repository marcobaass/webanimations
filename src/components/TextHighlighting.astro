</div>

<style>
  #textWrap {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  h2 {
    color: var(--clr-five);
    line-height: 1.8;
  }
</style>

<script>
import { gsap } from "gsap";
import { ScrollTrigger } from "gsap/ScrollTrigger";
gsap.registerPlugin(ScrollTrigger);

const textLines: HTMLElement[] = gsap.utils.toArray("h2")

textLines.forEach((line,index) => {
  let xValue = 0
  if (index % 2 === 0) {
    xValue = 12
  } else {
    xValue = -12
  }

  gsap.to(line, {
    color: "black",
    x: xValue,
    y: 4,
    scrollTrigger: {
      trigger: line,
      start: "top 50%",
      toggleActions: "play none none reverse"
    }
  })
})

</script>
